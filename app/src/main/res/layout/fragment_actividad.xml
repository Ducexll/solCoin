<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_Principal"
    tools:context=".ActividadFragment">

    <Spinner
        android:id="@+id/spinnerTrimestre"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:background="@drawable/spinner_border"
        android:padding="8dp"
        android:popupBackground="@color/fondo_Principal"
        app:layout_constraintEnd_toEndOf="@+id/textViewTrimestre"
        app:layout_constraintStart_toStartOf="@+id/textViewTrimestre"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTrimestre"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Selecciona un trimestre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSesiones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Selecciona las sesiones empleadas"
        app:layout_constraintEnd_toEndOf="@+id/spinnerTrimestre"
        app:layout_constraintStart_toStartOf="@+id/spinnerTrimestre"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTrimestre" />

    <EditText
        android:id="@+id/editTextNumSesiones"
        android:layout_width="134dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/fondo_botones"
        android:ems="10"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textViewSesiones"
        app:layout_constraintStart_toStartOf="@+id/textViewSesiones"
        app:layout_constraintTop_toBottomOf="@+id/textViewSesiones" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Numero de alumnos:"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumSesiones"
        app:layout_constraintStart_toStartOf="@+id/editTextNumSesiones"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumSesiones" />

    <EditText
        android:id="@+id/editTextNumAlumnos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/black"
        android:backgroundTint="@color/fondo_botones"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Tipo de mantenimiento:"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumAlumnos"
        app:layout_constraintStart_toStartOf="@+id/editTextNumAlumnos"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumAlumnos" />

    <Spinner
        android:id="@+id/spinnerTipoActividad"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/spinner_border"
        android:padding="8dp"
        android:popupBackground="@color/fondo_Principal"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:background="@drawable/boton_redondeado"
        android:text="Registrar Actividad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTipoActividad" />
</androidx.constraintlayout.widget.ConstraintLayout>